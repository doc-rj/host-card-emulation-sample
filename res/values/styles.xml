<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <style name="splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_splitter</item>
        <item name="android:background">@color/bg_splitter</item>
        <item name="android:layout_marginTop">@dimen/margin_splitter</item>
        <item name="android:layout_marginBottom">@dimen/margin_window</item>
    </style>

    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:clickable">false</item>
        <item name="android:scrollbars">none</item>
    </style>
</resources>
